<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/round_blue_cadre"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:id="@+id/txt_article"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="fill_vertical"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="TextView"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/line_v" />

            <TextView
                android:id="@+id/txt_piece"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="fill_vertical"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="TextView"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/line_v" />

            <TextView
                android:id="@+id/txt_qt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="fill_vertical"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="TextView"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/line_v" />

            <TextView
                android:id="@+id/txt_qt_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="fill_vertical"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="TextView"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/imageView911"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/line_v" />

            <TextView
                android:id="@+id/txt_ecart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="fill_vertical"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="TextView"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>